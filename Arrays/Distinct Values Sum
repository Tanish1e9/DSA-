CSES link: https://cses.fi/problemset/task/3150/

// Dekh ekdum simple idea h... koi element maan lo extra contribute kin subarrays me krega
// prev occurrence se ek aage waale se hi na 
// kyunki uske pehle waale me to jo prev occurrence h wo contribute kr hi de rha h
// bas yahi idea h

#include <bits/stdc++.h>
using namespace std;
#define int long long
signed main() {
	ios::sync_with_stdio(false);
	cin.tie(0);
	int n;
	cin >> n;
	vector<int> arr(n);
	map<int,int> last_pos;
	int ans = 0;
	for(int i=0;i<n;i++) {
		cin >> arr[i];
		int l = 0;
		if(last_pos.count(arr[i])) {
			l = last_pos[arr[i]]+1;
		} 
		ans += (i-l+1) * (n-i);
		last_pos[arr[i]] = i;
	}
 
	cout << ans << endl;
	return 0;
}
