#include <bits/stdc++.h>
int bin(vector<int>&arr){
    int l=0;
    int r=arr.size()-1;
    int ans=INT_MAX;
    int idx=-1;
    while(l<=r){
        int mid=l+(r-l)/2;
        if(arr[mid]<arr[r]){
            if(arr[mid]<ans){
                ans=arr[mid];
                idx=mid;
            }
            r=mid-1;
        }
        else{
            if(arr[l]<ans){
                ans=arr[l];
                idx=l;
            }
            l=mid+1;
        }
    }
    return idx;
}
int findKRotation(vector<int> &arr){
    return bin(arr);
}
