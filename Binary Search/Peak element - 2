LC link: https://leetcode.com/problems/find-a-peak-element-ii/

// yahi intuition hai ki maximum element in the middle column find kr lie 
// and fir left right dekhenge jidhar jada hoga udhar chale jayenge
// fir waha bhi max lia jayega usse ye hoga ki ek taraf ka "peakness" ensure krte hue badh rhe honge
// kabhi na kabhi dusre taraf ka bhi "peakness" hit ho hi jayega
vector<int> findPeakGrid(vector<vector<int>>& mat) {
        int low = 0;
        int high = mat[0].size();
        while (low <= high) {
            int mid = low + (high - low)/2;
            int maxi = -1;
            int row = -1;
            for (int i=0;i<mat.size();i++){
                if (mat[i][mid] > maxi) {
                    maxi = mat[i][mid];
                    row = i;
                }
            }

            if (mid > 0 && maxi < mat[row][mid-1]) high = mid - 1;
            else if (mid < mat[0].size()-1 && maxi < mat[row][mid+1]) low = mid + 1;
            else return {row, mid};
        }
        return {-1, -1};
    }
