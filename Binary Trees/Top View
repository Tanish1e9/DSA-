GFG link: https://www.geeksforgeeks.org/problems/top-view-of-binary-tree/1

// ye top view islie nahi ho skta dfs se because
// we want ki minimum level ka node hi ek column ko pehle touch kre
// that is only possible in bfs because dfs me to left me ghus jayega aur ho skta ki koi dusra column touch kr de
// jiske lie current level pe ek dusra node tha
// similarly bottom view me we would want ki maximum level wala kre then also bfs
vector<int> topView(Node *root)
    {
        if(root==0) return {};
        map<int,int> mymap;
        queue<pair<Node*,int>> q;
        q.push({root,0});
        while(!q.empty()){
            int curr_size=q.size();
            while(curr_size--){
                pair<Node*,int> curr=q.front();
                q.pop();
                mymap.insert({curr.second,curr.first->data});
                if(curr.first->left) q.push({curr.first->left,curr.second-1});
                if(curr.first->right) q.push({curr.first->right,curr.second+1});
            }
        }
        vector<int> ans;
        for(auto it:mymap){
            ans.push_back(it.second);
        }
        return ans;
    }
