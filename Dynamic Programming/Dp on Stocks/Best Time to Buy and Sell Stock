LC link: https://leetcode.com/problems/best-time-to-buy-and-sell-stock/description/

// iska to greedy solution hi hota h
int maxProfit(vector<int>& prices) {
    int buying = 1e9;
    int max_profit = 0;
    for(int i=0;i<prices.size();i++) {
        if(prices[i] > buying) max_profit = max(max_profit, prices[i]-buying);
        else buying = prices[i];
    }
    return max_profit;
} 

