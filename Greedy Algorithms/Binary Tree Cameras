LC link: https://leetcode.com/problems/binary-tree-cameras/description/

// Isme greedily sirf itna socho ki koi bhi uncovered node h
// to uske parent pe lagana hi hmesha better h
// (in case agar parent nahi h tab wahi par laga do... wahi case dekho ans+(val==2)
// me kie h)

// 0 means covered by other
// 1 means camera at the node
// 2 means not covered
int ans = 0;
int postorder(TreeNode* root) {
    if(!root->left && !root->right) return 2;
    int left = -1, right = -1;
    if(root->left) left = postorder(root->left);
    if(root->right) right = postorder(root->right);
    if(left==2 || right==2) {
        ans++;
        return 1;
    }
    if(left==1 || right==1) return 0;
    return 2;
}
int minCameraCover(TreeNode* root) {
    int val = postorder(root);
    return ans + (val==2);
}
