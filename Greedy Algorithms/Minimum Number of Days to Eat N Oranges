    // vis.insert(n);
    // while(!q.empty()) {
    //     int level_size = q.size();
    //     while(level_size--) {
    //         int curr = q.front();
    //         q.pop();
    //         if(curr == 0) return level;
    //         if(curr%3==0) {
    //             if(!vis.count(curr/3)) {
    //                 vis.insert(curr/3);
    //                 q.push(curr/3);
    //             }
    //         }
    //         if(curr%2==0) {
