CSES link: https://cses.fi/problemset/task/1631/

#include<bits/stdc++.h>
using namespace std;
#define int long long
signed main(){
    int n;
    cin >> n;
    vector<int>times(n);
    int tot_sum =0,maxi=0;
    for(int i=0;i<n;i++) {
        cin >> times[i];
        tot_sum+=times[i];
        maxi = max(maxi,times[i]);
    }
    
    if(tot_sum - maxi < maxi) cout << 2*maxi << endl;
    else cout << tot_sum << endl;

    return 0;
}
