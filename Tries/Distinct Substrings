CodeStudio link: https://www.naukri.com/code360/problems/count-distinct-substrings_985292

// O(n^2) solution h but O(n^2) space bhi lag skta h na TrieNodes me
#include<bits/stdc++.h>
using namespace std;
class TrieNode{
    public:
    TrieNode* arr[26] = {0};
    bool ending = false;
};
int countDistinctSubstrings(string &s){
    int n = s.size();
    TrieNode* root = new TrieNode();
    int ans = 0;
    for(int i=0;i<n;i++) {
        TrieNode* curr = root;
        for(int j=i;j<n;j++) {
            if(!curr->arr[s[j]-'a']) {
                curr->arr[s[j]-'a'] = new TrieNode();
            }
            curr = curr->arr[s[j]-'a'];
            if(!curr->ending){
                ans++;
                curr->ending = true;
            }
        }
    }
    return ans + 1;
}
